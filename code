#include<bits/stdc++.h>
using namespace std;
int main(){
    cout<<"Enter the size of the array : ";
    int num;
    cin>>num;
    cout<<"Enter the elements of the array : ";
    int arr[num];
    for(int i=0;i<num;i++){
        cin>>arr[i];
    }
    cout<<"Enter the number to search : ";
    int search;
    cin>>search;
    bool found=false;
    for(int i=0;i<num;i++){
        if(arr[i]==search){
            cout<<"Element found at index : "<<i<<endl;
            found=true;
        }
        else{
            continue;
        }
    
    }
    if(!found){
        cout<<"Invalid search element - Element not found!"<<endl;
    }
    return 0;
}
